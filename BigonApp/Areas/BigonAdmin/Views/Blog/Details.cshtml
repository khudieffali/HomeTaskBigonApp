@using Bigon.Business.Modules.BlogsModule.Queries.BlogGetByIdQuery
@model BlogGetByIdDto

<div class="card">
    <div class="card-header">
        <h5>Details Blog Page</h5>
        </br>
        <a asp-action="Index" asp-controller="blog" class="mt-3 btn btn-primary">Back To List</a>
        <a asp-controller="blog" asp-action="edit" asp-route-id="@Model.Id" class="btn btn-warning text-white mt-3"><i class="fa-solid fa-pen-to-square"></i>Edit</a>

    </div>
    <div class="card-block">
        <label class="col-sm-2">Blog Photo</label>
        <img src="~/uploads/images/@Model.ImagePath"  />
        <div />
    <div class="card-block">
        <label class="col-sm-2">Blog Title</label>
        <label class="col-sm-10 form-control" style="background:#cdcdcd">@Model.Name</label>
      <div/>
        <div class="card-block">
            <label class="col-sm-2">Body</label>
            <label class="col-sm-10 form-control" style="background:#cdcdcd">@Model.Description</label>
        </div>
        <div class="card-block">
            <label class="col-sm-2">Category Name</label>
            <label class="col-sm-10 form-control" style="background:#cdcdcd">@Model.CategoryName</label>
        </div>
        <div class="card-block">
            <label class="col-sm-2">Slug</label>
            <label class="col-sm-10 form-control" style="background:#cdcdcd">@Model.Slug</label>
        </div>
        <div class="card-block">
            <label class="col-sm-2">Published By</label>
            <label class="col-sm-10 form-control" style="background:#cdcdcd">@Model.PublishedBy</label>
        </div>
        <div class="card-block">
            <label class="col-sm-2">Published At</label>
            <label class="col-sm-10 form-control" style="background:#cdcdcd">@Model.PublishedAt</label>
        </div>
        <div class="card-block">
            <label class="col-sm-2">CreatedAt</label>
            <label class="col-sm-10 form-control" style="background:#cdcdcd">@Model.CreatedAt</label>
        </div>
        <div class="card-block">
            <label class="col-sm-2">ModifiedBy</label>
            <label class="col-sm-10 form-control" style="background:#cdcdcd">@Model.ModifiedBy</label>
        </div>
        <div class="card-block">
            <label class="col-sm-2">ModifiedAt</label>
            <label class="col-sm-10 form-control" style="background:#cdcdcd">@Model.ModifiedAt</label>
        </div>
