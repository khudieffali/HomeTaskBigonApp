@model Blog
@{
    var BlogcategoryList = ViewBag.BlogCategories;
}
<div class="card">
    <div class="card-header">
        <h5>Create Blog Page</h5>
        </br>
        <a asp-action="Index" asp-controller="blog" class="mt-3 btn btn-primary">Back To List</a>
    </div>
    <div class="card-block">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Title</label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" placeholder="Blog Title">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Body</label>
                <div class="col-sm-10">
                    <input asp-for="Description" class="form-control" placeholder="Blog Body">
                </div>
            </div> <div class="form-group row">
                <label class="col-sm-2 col-form-label">Photo</label>
                <div class="col-sm-10">
                    <input id="imageStyle" asp-for="ImagePath" type="file" class="form-control" placeholder="Blog Photo">
                </div>
    </div> <div class="form-group row">
        <label class="col-sm-2 col-form-label">Categories</label>
        <div class="col-sm-10">
            <select asp-items="BlogcategoryList" asp-for="CategoryId" class="form-control">
                <option selected disabled>----Select----</option>
                
            </select>
        </div>
    </div>
       <input type="submit" class="btn btn-success text-white" value="Create">
    </form>
</div>
</div>

