@using Bigon.Business.Modules.BlogsModule.Queries.BlogGetAllQuery
@model IEnumerable<BlogGetAllDto>

<div class="card">
    <div class="card-header">
        <h5>Blogs</h5>
        </br>
        <a asp-action="create" asp-controller="blog" class="btn btn-primary mt-3">Create</a>
    </div>
    <div class="card-block table-border-style">
        <div class="table-responsive">
            <table class="table table-inverse">
                <thead>
                    <tr>
                        <th>Photo</th>
                        <th>Title</th>
                        <th>Body</th>
                        <th>Categories</th>
                    </tr>
                </thead>
                <tbody id="blogList">
                    <partial name="_Body" model="@Model" />
                </tbody>
            </table>
        </div>
    </div>
</div>
@section scripts {
    <script>
        function removeBlog(id, name) {
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        method: "POST",
                        url: "@Url.Action("remove", "blog")",
                        data: { id, name },
                        success: (result) => {
                            if (!result.error) {
                                Swal.fire({
                                    title: "Deleted!",
                                    text: result.message,
                                    icon: "success"
                                });
                                $("#blogList").html(result)
                                return;
                            }
                            Swal.fire({
                                title: "Not Deleted!",
                                text: result.message,
                                icon: "error"
                            });
                        },
                        error: (error) => {
                            Swal.fire({
                                title: "Error",
                                text: "",
                                icon: "error"
                            });
                        }
                    });
                }
            });
        }

    </script>
}

<style>
    span[color] {
        display: inline-block;
        height: 30px;
        width: 30px;
        border-radius: 100%;
        border: 2px solid #cdcdcd;
    }
</style>
