@using Bigon.Business.Modules.CategoriesModule.Queries.CategoryGetByIdQuery
@model CategoryGetByIdDto

<div class="card">
    <div class="card-header">
        <h3>Details Category Page</h3>
        </br>
        <a asp-action="Index" asp-controller="Category" class="mt-3 btn btn-primary">Back To List</a>
        <a asp-controller="Category" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning text-white mt-3"><i class="fa-solid fa-pen-to-square"></i>Edit</a>

    </div>
    <div class="card-block">
        <label class="col-sm-2">Name</label>
        <label class="col-sm-10 form-control" style="background:#cdcdcd">@Model.Name</label>
    </div>
    <div class="card-block">
        <label class="col-sm-2">Description</label>
        <label class="col-sm-10 form-control" style="background:#cdcdcd">@Model.Description</label>
    </div>
    <div class="card-block">
        <label class="col-sm-2">Parent Category Name</label>
        <label class="col-sm-10 form-control" style="background:#cdcdcd">@Model.ParentName</label>
    </div>
    <div class="card-block">
        <label class="col-sm-2">CreatedAt</label>
        <label class="col-sm-10 form-control" style="background:#cdcdcd">@Model.CreatedAt</label>
    </div>
    <div class="card-block">
        <label class="col-sm-2">CreatedAt</label>
        <label class="col-sm-10 form-control" style="background:#cdcdcd">@Model.CreatedBy</label>
    </div>
    <div class="card-block">
        <label class="col-sm-2">ModifiedBy</label>
        <label class="col-sm-10 form-control" style="background:#cdcdcd">@Model.ModifiedBy</label>
    </div>
    <div class="card-block">
        <label class="col-sm-2">ModifiedAt</label>
        <label class="col-sm-10 form-control" style="background:#cdcdcd">@Model.ModifiedAt</label>
    </div>
