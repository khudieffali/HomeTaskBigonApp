@{
    ViewBag.Title = "Index";
}
@model IEnumerable<Category>
@using Bigon.Infrastructure.Extension

<div class="mb-4">
    <h2>Categories</h2>
    <a asp-action="create" asp-controller="category" class="btn btn-outline-success">+Add</a>
</div>
<table class="tree table table-bordered">
    <tbody id="CategoryList">
        <partial name="_Body" model="@Model" />
    </tbody>
</table>




@section custom_css {
    <link href="/libs/jquery-treegrid/css/jquery.treegrid.css" rel="stylesheet" />
}


@section scripts {
    <script src="/libs/jquery-treegrid/js/jquery.treegrid.js"></script>
    <script>
        $('.tree').treegrid().treegrid('collapseAll');
    </script>
    <script>
        function removeCategory(id, name) {
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        method: "POST",
                        url: "@Url.Action("remove", "category")",
                        data: { id, name },
                        success: (result) => {
                            if (!result.error) {
                                Swal.fire({
                                    title: "Deleted!",
                                    text: result.message,
                                    icon: "success"
                                });
                                $("#CategoryList").html(result)
                                return;
                            }
                            Swal.fire({
                                title: "Not Deleted!",
                                text: result.message,
                                icon: "error"
                            });
                        },
                        error: (error) => {
                            Swal.fire({
                                title: "Error",
                                text: "",
                                icon: "error"
                            });
                        }
                    });
                }
            });
        }
    </script>
}
