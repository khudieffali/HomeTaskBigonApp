@model Category
@{
    var categoryList = ViewBag.CategoryList;
}
<div class="card">
    <div class="card-header">
        <h5>Create Category Page</h5>
        </br>
        <a asp-action="Index" asp-controller="category" class="mt-3 btn btn-primary">Back To List</a>
    </div>
    <div class="card-block">
        <form method="post">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Title</label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" placeholder="Category Name">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Body</label>
                <div class="col-sm-10">
                    <input asp-for="Description" class="form-control" placeholder="Description">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Categories</label>
                <div class="col-sm-10">
                    <select asp-items="categoryList" asp-for="ParentId" class="form-control">
                        <option selected disabled>----Select----</option>

                    </select>
                </div>
            </div>
            <input type="submit" class="btn btn-success text-white" value="Create">
            </form>
    </div>
</div>
