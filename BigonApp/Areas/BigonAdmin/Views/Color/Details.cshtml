@model Color

<div class="card">
    <div class="card-header">
        <h5>Details Color Page</h5>
        </br>
        <a asp-action="Index" asp-controller="Color" class="mt-3 btn btn-primary">Back To List</a>
        <a asp-controller="color" asp-action="edit" asp-route-id="@Model.Id" class="btn btn-warning text-white mt-3"><i class="fa-solid fa-pen-to-square"></i>Edit</a>

    </div>
    <div class="card-block">
        <label class="col-sm-2">Tag Name</label>
        <label class="col-sm-10 form-control" style="background:#cdcdcd">@Model.Name</label>
    <div class="card-block">
        <label class="col-sm-2">HexCode</label>
        <label class="col-sm-10 form-control" style="background:#cdcdcd">@Model.HexCode</label>
    </div>
    <div class="card-block">
        <label class="col-sm-2">Color CreatedBy</label>
        <label class="col-sm-10 form-control" style="background:#cdcdcd">@Model.CreatedBy</label>
    </div>
    <div class="card-block">
        <label class="col-sm-2">Color CreatedAt</label>
        <label class="col-sm-10 form-control" style="background:#cdcdcd">@Model.CreatedAt</label>
    </div>
    <div class="card-block">
        <label class="col-sm-2">Color ModifiedBy</label>
        <label class="col-sm-10 form-control" style="background:#cdcdcd">@Model.ModifiedBy</label>
    </div>
    <div class="card-block">
        <label class="col-sm-2">Color ModifiedAt</label>
        <label class="col-sm-10 form-control" style="background:#cdcdcd">@Model.ModifiedAt</label>
    </div>
</div>
