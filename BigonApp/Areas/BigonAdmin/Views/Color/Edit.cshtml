@model Color
<div class="card">
    <div class="card-header">
        <h5>Edit Color Page</h5>
        </br>
        <a asp-action="Index" asp-controller="Color" class="mt-3 btn btn-primary">Back To List</a>
    </div>
    <div class="card-block">
        <form method="post">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" placeholder="Color Name">
                </div>
                <label class="col-sm-2 col-form-label mt-3">Color</label>
                <div class="col-sm-10 mt-3">
                    <input asp-for="HexCode" type="color" class="form-control">
                </div>
            </div>
            <input type="submit" class="btn btn-success text-white" value="Edit">
        </form>
    </div>
</div>
